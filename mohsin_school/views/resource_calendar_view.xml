<odoo>
    <data>

        <record id="mohsin_school_academic_calendar_form_view" model="ir.ui.view">
            <field name="name">mohsin.school.academic.calendar.form.view</field>
            <field name="model">resource.calendar</field>
            <field name="inherit_id" ref="resource.resource_calendar_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="is_school_calendar"/>
                </xpath>
            </field>
        </record>


        <record id="action_mohsin_school_academic_calendar_setup" model="ir.actions.act_window">
            <field name="name">Academic Calendar</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">resource.calendar</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_school_calendar', '=', True)]</field>
            <field name="context">{'default_is_school_calendar':1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new School Academic Calendar
                </p>
                <p>
                    Create and manage the School Academic Calendar
                </p>
            </field>
        </record>


        <menuitem name="School Timings" id="menu_mohsin_school_academic_calendar_setup"
                  parent="mohsin_school_configuration" action="action_mohsin_school_academic_calendar_setup"
                  sequence="4"/>
    </data>
</odoo>

