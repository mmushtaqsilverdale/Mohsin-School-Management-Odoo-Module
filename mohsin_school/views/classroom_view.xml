<odoo>
    <data>
        <menuitem name="Classroom" id="menu_mohsin_school_config_classroom"
                  parent="mohsin_school_configuration"/>

        <record id="action_mohsin_school_building" model="ir.actions.act_window">
            <field name="name">Building</field>
            <field name="res_model">mohsin.school.building</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Building
                </p>
            </field>
        </record>

        <record id="mohsin_school_classroom_building_tree_view" model="ir.ui.view">
            <field name="name">mohsin.school.classroom.building.tree.view</field>
            <field name="model">mohsin.school.building</field>
            <field name="arch" type="xml">
                <tree string="Buildings">
                    <field name="active" column_invisible="1"/>
                    <field name="name"/>
                    <field name="address_id"/>
                    <field name="company_id"/>
                    <field name="company_id" column_invisible="1"/>
                </tree>
            </field>
        </record>


        <record id="mohsin_school_classroom_building_form_view" model="ir.ui.view">
            <field name="name">mohsin.school.classroom.building.form.view</field>
            <field name="model">mohsin.school.building</field>
            <field name="arch" type="xml">
                <form string="Building">
                    <field name="company_id" invisible="1"/>
                    <sheet>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="name"/>
                                <field name="address_id"/>
                            </group>
                            <group>
                                <field name="company_id" options="{'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <menuitem name="Building" id="menu_school_config_classroom_building"
                  parent="menu_mohsin_school_config_classroom" action="action_mohsin_school_building"
                  sequence="1"/>


        <record id="mohsin_school_classroom_building_room_tree_view" model="ir.ui.view">
            <field name="name">mohsin.school.classroom.building.room.tree.view</field>
            <field name="model">mohsin.school.building.room</field>
            <field name="arch" type="xml">
                <tree string="Building Rooms">
                    <field name="name"/>
                    <field name="building_id"/>
                    <field name="capacity"/>
                </tree>
            </field>
        </record>


        <record id="mohsin_school_classroom_building_room_form_view" model="ir.ui.view">
            <field name="name">mohsin.school.classroom.building.room.form.view</field>
            <field name="model">mohsin.school.building.room</field>
            <field name="arch" type="xml">
                <form string="Building Room">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="e.g. Room 1"/>
                            </h1>
                            <label for="building_id"/>
                            <h2>
                                <field name="building_id" options="{'no_create': True}"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="capacity"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_mohsin_school_building_room" model="ir.actions.act_window">
            <field name="name">Building Rooms</field>
            <field name="res_model">mohsin.school.building.room</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new building room
                </p>
            </field>
        </record>


        <menuitem name="Rooms" id="menu_school_config_classroom_building_room"
                  parent="menu_mohsin_school_config_classroom" action="action_mohsin_school_building_room"
                  sequence="2"/>
    </data>
</odoo>

