<odoo>
    <data>

        <record id="attendance_register_form_view" model="ir.ui.view">
            <field name="name">attendance.register.form.view</field>
            <field name="model">mohsin.attendance.register</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Attendance Register">
                    <header>
                        <button name="button_draft" invisible="state != 'cancel'" string="Set to Draft" type="object"
                                data-hotkey="n"/>
                        <button name="button_open" invisible="state != 'draft'" string="Open" type="object"
                                class="oe_highlight" data-hotkey="o"/>
                        <button name="button_cancel" invisible="state != 'draft'" string="Cancel" type="object"
                                data-hotkey="x"/>
                        <button name="button_close" type="object" string="Close Register"
                                invisible="state != 'progress'" data-hotkey="l"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,progress,close" readonly="1"/>

                    </header>
                    <sheet>
                        <field name="active" invisible="1"/>

                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="e.g. Fall 2023"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="school_year_id" options="{'no_create': True}"/>

                                <label for="date_start" string="Dates"/>
                                <div name="dates" class="o_row">
                                    <field name="date_start"/>
                                    <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon"
                                       title="Arrow"/>
                                    <field name="date_end"/>
                                </div>
                                <field name="course_id" options="{'no_create_edit': True}" required="1"/>
                            </group>
                            <group>
                                <field name="company_id" options="{'no_create': True}"/>
                            </group>
                        </group>
                        <separator string="Description"/>
                        <field name="description" type="html" options="{'collaborative': true, 'resizable': false}"
                               placeholder="Attendance Register Details..."/>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_attendance_register" model="ir.actions.act_window">
            <field name="name">Attendance Register</field>
            <field name="res_model">mohsin.attendance.register</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your Attendane Register
                </p>
                <p>
                    Create the attendence register to maintain the records of daily attendance
                </p>
            </field>
        </record>

        <menuitem name="Attendance Register" id="menu_mohsin_school_attendance_register"
                  parent="menu_mohsin_school_student_attendance_config"
                  action="action_attendance_register"
                  sequence="100"
        />


    </data>
</odoo>